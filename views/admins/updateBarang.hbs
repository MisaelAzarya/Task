<div class="container" style="background-color:white;margin-top:-20px;">
    <div class="row">
      <section class="header_text">
              <h2>Update Product</h2>
      </section>

        <div class="col-md-4 col-md-offset-4">
            {{!-- kalau ada error --}}
            <div class="alert alert-danger {{#if hasErrors}}hidden{{/if}}">
                <center><p>{{messages}}</p></center>
            </div>

            <form action="/product/updateBarang/" method="post">
                <div class="form-group">
                    <label for="email">Nama Barang</label>
                    <input type="text" id="namaBrg" name="namaBrg" class="form-control" value="{{product_name}}" disabled>
                </div>
                <div class="form-group">
                    <label>Brand</label>
                    <input type="text" id="brand" name="brand" class="form-control" value="{{p_brand}}" disabled>
                </div>
                <div class="form-group">
                    <label for="color">Color</label>
                    <input type="text" name="color" id="color" class="form-control" value="{{p_color}}" required>
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <textarea name="desc" id="desc" cols="30" rows="5" class="form-control">{{desc}}</textarea>
                </div>
                <div class="form-group">
                    <label for="price">Price</label>
                    <input type="number" name="price" class="form-control" value="{{price}}" required>
                </div>
                <div class="form-group">
                    <label for="pass">Stock</label>
                    <input type="number" id="stock" name="stock" class="form-control" value="{{p_stock}}" required>
                </div>
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-primary">Update Product</button>
            </form>
        </div>
    </div>
</div>
