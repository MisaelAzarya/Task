<div class="container" style="background-color:white;margin-top:-20px;">
    <div class="row">
      <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h2>Confirm your payment</h2>
        <p>Total Price: Rp. {{total}}</p>
        <p>Please transfer your AAAA to BCA with account number XXXXXXXXXX</p>
        <form action="/trans/pay" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label>Transaction Number : {{orderId}}</label>
          </div>
          <div class="form-group">
            <label for="nama_rek">Name:</label>
            <input type="text" class="form-control" name="nama_rek" id="nama_rek">
          </div>
          <div class="form-group">
            <label for="bank">Bank:</label>
            <input type="text" class="form-control" name="bank" id="bank">
          </div>
          <div class="form-group">
            <label for="no_rek">No Rek:</label>
            <input type="text" class="form-control" name="no_rek" id="no_rek">
          </div>
          <div class="form-group">
            <label for="no_rek">Upload Bukti Transfer:</label>
            <input type="file" name="bktImage" accept="image/*" required>
          </div>
          <div class="form-group">
            <input type="hidden" name="orderid" value="{{orderId}}">
            <button type="submit" class="btn btn-primary">Confirm</button>
          </div>
        </form>
      </div>
    </div>
</div>
